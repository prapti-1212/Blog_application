<head>
  <title>Welcome Back</title>
</head>
<body>
  <h1>Welcome back</h1>
  <nav class="navbar">
    <ul class="navbar-nav">
      <li class="nav-item ml-auto">
        <%= link_to "Logout", destroy_user_session_path, data: { turbo_method: :delete }, class: "nav-link navbar-link" %>
        <%= link_to "New Blog", new_blog_path, class: "nav-link navbar-link" %>
      </li>
    </ul>
  </nav>
  <div id="blog">
    <% if @blogs.present? %>
      <% @blogs.each do |b| %>
        <div>
          <a href="/blog/<%= b.id %>"><%= b.title %></a>
        </div>
      <% end %>
    <% else %>
      <p>No blogs found.</p>
    <% end %>
  </div>
</body>
<style>
  /* Global Styles */
  body {
    font-family: 'Arial', sans-serif;
    background-color: #f4f4f9;
    margin: 0;
    padding: 0;
  }
  h1 {
    text-align: center;
    color: #333;
    margin-top: 50px;
    font-size: 36px;
  }

  /* Navbar Styles */
  .navbar {
    background-color: #343a40;
    padding: 10px 0;
    color: white;
  }

  .navbar-nav {
    list-style-type: none;
    margin: 0;
    padding: 0;
    text-align: center;
  }

  .nav-item {
    display: inline-block;
    margin: 0 15px;
  }

  .nav-link {
    color: #fff;
    text-decoration: none;
    font-size: 18px;
    padding: 10px 20px;
    border-radius: 5px;
    transition: background-color 0.3s;
  }

  .nav-link:hover {
    background-color: #007bff;
  }

  .navbar-link {
    font-size: 16px;
  }

  .ms-auto {
    margin-left: auto;
  }

  /* Blog Section Styles */
  #blog {
    max-width: 900px;
    margin: 50px auto;
    padding: 20px;
    background-color: white;
    border-radius: 8px;
    box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
  }

  #blog a {
    text-decoration: none;
    font-size: 20px;
    color: #007bff;
    display: block;
    padding: 15px;
    border-bottom: 1px solid #ddd;
    transition: color 0.3s;
  }

  #blog a:hover {
    color: #0056b3;
    background-color: #f1f1f1;
  }

  #blog p {
    font-size: 18px;
    text-align: center;
    color: #777;
  }
</style>
